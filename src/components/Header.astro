---
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
	<div class="header-content">
		<a style="text-decoration: none; color: rgb(var(--black))" href="/">
			<h1>Peter Rem√∏y Paulsen</h1>
			<p class="at">@petrepa</p>
		</a>
	</div>
	<div class="theme-toggle-wrapper">
		<ThemeToggle />
	</div>
</header>

<style>
	header {
		margin: 0;
		padding: 2em 1em 0 1em;
		min-height: 2em;
		position: relative;
	}
	.header-content {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.theme-toggle-wrapper {
		position: absolute;
		top: 1em;
		right: 1em;
	}
	h1 {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
	}
	nav a {
		/* padding: 1em 0.5em; */
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.at {
		display: flex;
		justify-content: center;
		font-style: italic;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.theme-toggle-wrapper {
			top: 0.5em;
			right: 0.5em;
		}
	}
</style>
